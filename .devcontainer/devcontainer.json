{
	"name": "Rust",
	"build": {
		"dockerfile": "Dockerfile",
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"settings": {
			"lldb.executable": "/usr/bin/lldb",
			"files.watcherExclude": {
				"**/target/**": true
			},
			"rust-analyzer.checkOnSave.command": "clippy"
		},
		"extensions": [
			"vadimcn.vscode-lldb",
			"mutantdino.resourcemonitor",
			"tamasfe.even-better-toml",
			"rust-lang.rust-analyzer",
			"serayuzgur.crates"
		]
	},
	"remoteUser": "vscode"
}